    ViewData["Title"] = "Add Program";
    var Exercises = this.ViewData["Exercises"] as SelectList;
    var clientId = this.ViewData["ClientId"];
}

<form action="/" method="post">
</form>
<div class="col-auto">
    <h2>New Program</h2>
    <form method="post" enctype="multipart/form-data" class="pt-4">
        @*<div class="form-group">
                <label class="col-auto">Difficulty</label>
                <div class="col-auto">
                    <select asp-for="@Model.Difficulty" class="form-control" asp-items="@Diffliculty">
                    </select>
                    <span asp-validation-for="Difficulty" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-auto col-form-label">Image</label>
                <div class="col-auto">
                    <input type="number" asp-for="@Model.DaysInWeek" class="form-control"/>
                    <span asp-validation-for="DaysInWeek" class="text-danger"></span>
                </div>
