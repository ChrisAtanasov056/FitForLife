        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th scope="col">Monday</th>
                    <th scope="col">Tuesday</th>
                    <th scope="col">Wednesday</th>
                    <th scope="col">Thursday</th>
                    <th scope="col">Friday</th>
                    <th scope="col">Saturday</th>
                    <th scope="col">Sunday</th>
                </tr>
            </thead>

            <tbody>

                @for (int i = 0; i < 7; i++)
                {
                    <tr>
                        @for (int u = 0; u < 7; u++)
                        {
                            <td>
                                <select asp-for="@Model.TrainingDayInputs[u].Exercises[i].Id" class="form-control" asp-items=@Exercises>
                                </select>
                            </td>
                        }
                    </tr>
                }

            </tbody>
        </table>
        <div class="form-group row">
            <div class="col-sm-6 text-right">
                <input asp-for="UserId" value="@clientId" hidden />
                <button type="submit" class="btn btn-success"
                        asp-area="Trainer" asp-controller="MyClients" asp-action="AddProgram">
                    Add Program
                </button>
            </div>
            <div class="col-sm-6">
                <a class="btn btn-danger" asp-area="Trainer" asp-controller="MyClients" asp-action="Index">Cancel</a>
            </div>
        </div>
    </form>
</div>
