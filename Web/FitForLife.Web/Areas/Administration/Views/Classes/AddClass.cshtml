@model FitForLife.Web.ViewModels.Classes.ClassInputModel

@{
    ViewData["Title"] = "Add Class";
}

<form action="/" method="post">

</form>
<div class="col-auto">
    <h2>New Class</h2>
    <form method="post" enctype="multipart/form-data" class="pt-4">
        <div class="form-group">
            <label class="col-auto">Name</label>
            <div class="col-auto">
                <input type="text" asp-for="@Model.Name" class="form-control" required="required">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-auto col-form-label">Image</label>
            <div class="col-auto">
                <input type="url" asp-for="@Model.PictureUrl" class="form-control" required="required" />
                <span asp-validation-for="PictureUrl" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-auto col-form-label">Description</label>
            <div class="col-auto">
                <textarea type="text" asp-for="@Model.Description" class="form-control" required="required"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-6 text-right">
                <button type="submit" class="btn btn-success"
                        asp-area="Administration" asp-controller="Classes" asp-action="AddClass">
                    Add Class
                </button>
            </div>
            <div class="col-sm-6">
                <a class="btn btn-danger" asp-area="Administration" asp-controller="Classes" asp-action="Index">Cancel</a>
            </div>
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

