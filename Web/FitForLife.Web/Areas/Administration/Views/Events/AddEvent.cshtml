@model FitForLife.Web.ViewModels.Events.EventInputModel

@{
    ViewData["Title"] = "Add Event";
    var classes = this.ViewData["Classes"] as SelectList ;
    var classesNames = this.ViewData["ClassesNames"] as SelectList;
}

<div class="col-auto">
    <h2>New Event</h2>
    <form method="post" enctype="multipart/form-data" class="pt-4">
        <div class="form-group">
            <label class="col-auto">Start Event</label>
            <div class="col-auto">
                <input type="datetime-local" asp-for="@Model.StartEvent" class="form-control" required="required">
                <span asp-validation-for="StartEvent" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-auto col-form-label">End Event</label>
            <div class="col-auto">
                <input type="datetime-local" asp-for="@Model.EndEvent" class="form-control" required="required" />
                <span asp-validation-for="EndEvent" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-auto col-form-label">Available Spots</label>
            <div class="col-auto">
                <input type="number" asp-for="@Model.AvailableSpots" class="form-control">
                <span asp-validation-for="AvailableSpots" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-auto col-form-label">Available Spots</label>
            <div class="col-auto">
                <textarea type="text" asp-for="@Model.Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-auto col-form-label">Class</label>
            <div class="col-auto">
                <select asp-for="@Model.ClassId" class="form-control" asp-items="@classesNames">
                </select>
                <span asp-validation-for="ClassId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-6 text-right">
                <button type="submit" class="btn btn-success"
                        asp-area="Administration" asp-controller="Events" asp-action="AddEvent">
                    Add Event
                </button>
            </div>
            <div class="col-sm-6">
                <a class="btn btn-danger" asp-area="Administration" asp-controller="Events" asp-action="Index">Cancel</a>
            </div>
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
