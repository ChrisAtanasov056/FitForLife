@model FitForLife.Web.ViewModels.Blog.BlogInputModel

@{
    ViewData["Title"] = "Add Blog";
    var BlogTypes = this.ViewData["Blog Types"] as SelectList;
}

<div class="col-auto">
    <h2>New Blog</h2>
    <form method="post" enctype="multipart/form-data" class="pt-4">
        <div class="form-group">
            <label class="col-auto">Title</label>
            <div class="col-auto">
                <input type="text" asp-for="@Model.Name" class="form-control" required="required">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-auto col-form-label">Author</label>
            <div class="col-auto">
                <input type="text" asp-for="@Model.Author" class="form-control" required="required" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-auto col-form-label">Context</label>
            <div class="col-auto">
                <textarea type="text" asp-for="@Model.Context" class="form-control"></textarea>
                <span asp-validation-for="Context" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-auto col-form-label">Image</label>
            <div class="col-auto">
                <textarea type="text" asp-for="@Model.ImageUrl" class="form-control"></textarea>
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-auto col-form-label">Type Blog</label>
            <div class="col-sm-10">
                <select asp-for="@Model.TypeBlog" class="form-control" asp-items="@BlogTypes">
                </select>
                <span asp-validation-for="TypeBlog" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-6 text-right">
                <button type="submit" class="btn btn-success"
                        asp-area="Administration" asp-controller="Blogs" asp-action="AddBlog">
                    Add Blog
                </button>
            </div>
            <div class="col-sm-6">
                <a class="btn btn-danger" asp-area="Administration" asp-controller="Blogs" asp-action="Index">Cancel</a>
            </div>
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
