@page
<div class="row">
    <!-- News Posts -->
    @foreach (var category in @ViewBag.AllClasses)
    {
    <div class="col-sm-4">
        <d class="container">
            <div>
                <hr class="bg-dark mx-4" style="height: 6px;" />
                <div class="news_post_image"><img src="@category.PictureUrl" class="img-fluid" alt="Responsive image"></div>
                <div class="news_post_content">
                    <div class="news_post_title text-center"><h2>@category.Name</h2></div>
                    <div class="news_post_text">
                        <strong>@category.Description</strong>
                    </div>
                </div>

            </div>
    </div>}
</div>