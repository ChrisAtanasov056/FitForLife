@model FitForLife.Web.ViewModels.Classes.AllClassesViewModel

@{
    this.ViewData["Title"] = "Classes of FitForLife Services";
}
<div class="classMainImage">
    <div class="container-fluid">
    </div>
</div>
<div class="how-section1">
    @for (int i = 0; i < Model.Classes.Count; i++)
    {
        if (i % 2 == 0)
        {
            <div class="row">
                <div class="col-md-6 how-img">
                    <img src="@Model.Classes[i].PictureUrl" class="rounded-circle img-fluid" alt="" />
                </div>
                <div class="col-md-6">
                    <h4>@Model.Classes[i].Name</h4>
                    @if(@Model.Classes[i].Trainers.Any())
                    {
                    <h4 class="subheading">Trainer: @Model.Classes[i].Trainers.Select(x => x.FirstName + " " + x.LastName).FirstOrDefault().ToString()</h4>
                    }
                    <p>
                        @Model.Classes[i].Description
                    </p>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-md-6">
                    <h4>@Model.Classes[i].Name</h4>
                    @if(@Model.Classes[i].Trainers.Any())
                    {
                    <h4 class="subheading">Trainer: @Model.Classes[i].Trainers.Select(x => x.FirstName + " " + x.LastName).FirstOrDefault().ToString()</h4>
                    }
                    <p>
                        @Model.Classes[i].Description
                    </p>
                </div>
                <div class="col-md-6 how-img">
                    <img src="@Model.Classes[i].PictureUrl" class="rounded-circle img-fluid" alt="" />
                </div>
            </div>

        }

    }
</div>
