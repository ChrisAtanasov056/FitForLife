@model FitForLife.Web.ViewModels.Classes.AllClassesViewModel

@{ 
    this.ViewData["Title"] = "Classes of FitForLife Services"; 
}

<div class="row">
    <!-- News Posts -->
    @foreach (var classView in Model.Classes)
    {
        <div class="col-sm-4">
            <d class="container">
                <div>
                    <hr class="bg-dark mx-4" style="height: 6px;" />
                    <div class="news_post_image"><img src="@classView.PictureUrl" class="img-fluid" alt="Responsive image"></div>
                    <div class="news_post_content">
                        <div class="news_post_title text-center"><h2>@classView.Name</h2></div>
                        <div class="news_post_text">
                            <strong>@classView.Description</strong>
                        </div>
                    </div>

                </div>
        </div>}
</div>