@model FitForLife.Web.ViewModels.Trainers.AllTrainersViewModel

@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section style="margin-top: 100px">
    <div class="container py-7">
        <h2 class="text-uppercase text-letter-spacing-xs my-0 text-dark font-weight-bold">
            Our Team <i class="ion-ios-body pl-1 text-primary op-8 z-index-1"></i>
        </h2>
        <hr class="hr-primary w-15 hr-xl ml-0 mb-5">
        @for (int i = 0; i < Model.Trainers.Count; i++)
        {
            @if (i % 2 == 0)
            {
                <div class="row mb-5">
                    <div class="col-md-6 order-md-2">
                        <img src="@Model.Trainers[i].ProfilePictureUrl" alt="Personal Trainer 1" class="img-fluid border-white border-w-5 w-50 w-md-80 w-lg-60 rounded-circle">
                    </div>
                    <div class="col-md-6 flex-valign text-md-right">
                        <h3 class="text-uppercase text-letter-spacing-xs mt-0 mb-1 text-dark font-weight-bold">
                            @Model.Trainers[i].FirstName @Model.Trainers[i].LastName
                        </h3>
                        <h5 class="my-0 font-weight-normal">
                            <em>@Model.Trainers[i].Class.Name</em>
                        </h5>
                        <hr class="hr-primary w-70 ml-0 ml-md-auto mr-md-0 mb-3">
                        <p id="trainerView">@Model.Trainers[i].Description</p>
                        <a href="#join" data-toggle="scroll-link" class="text-sm font-weight-bold"><i class="fa fa-chevron-right text-xs text-pink"></i> Train with @Model.Trainers[i].FirstName</a>
                    </div>
                </div>
            }
            else
            {
                <div class="row mb-5">
                    <div class="col-md-6 text-md-right">
                        <img src="@Model.Trainers[i].ProfilePictureUrl" alt="Personal Trainer 2" class="img-fluid border-white border-w-5 w-50 w-md-80 w-lg-60 rounded-circle">
                    </div>
                    <div class="col-md-6 flex-valign">
                        <h3 class="text-uppercase text-letter-spacing-xs mt-0 mb-1 text-dark font-weight-bold">
                            @Model.Trainers[i].FirstName @Model.Trainers[i].LastName
                        </h3>
                        <h5 class="my-0 font-weight-normal">
                            <em>@Model.Trainers[i].Class.Name</em>
                        </h5>
                        <hr class="hr-primary w-70 ml-0 mb-3">
                        <p id="trainerView">@Model.Trainers[i].Description</p>
                        <a href="#join" data-toggle="scroll-link" class="text-sm font-weight-bold"><i class="fa fa-chevron-right text-xs text-pink"></i> Train with @Model.Trainers[i].FirstName</a>
                    </div>
                </div>
            }

        }
    </div>
</section>
