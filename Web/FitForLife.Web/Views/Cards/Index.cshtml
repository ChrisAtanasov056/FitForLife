@model FitForLife.Web.ViewModels.Cards.AllCardsViewModel
@{
    this.ViewData["Title"] = "Cards";
}
<<div class="pricing4 py-5">
    <div class="container">
        <!-- Row  -->
        <div class="row m-4 justify-content-center">
            <div class="col-md-8 text-center">
