                            <li class="py-1"><i class="icon-check text-success"></i> Diet Plan Included</li>
                        </ul>
                        <div class="d-flex mt-3 align-items-center">
                            <h2 class="price">$@Model.Cards[0].Price</h2>
                            <div class="ml-auto">
                                <form asp-action="BuyCard" asp-controller="Cards" method="post">
                                    <input type="text" name="CardId" value="@Model.Cards[0].Id" hidden />
                                    <button type="submit" class="btn btn-danger-gradiant rounded-pill text-white btn-md border-0">
