@model FitForLife.Web.ViewModels.Classes.AllClassesViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center m-auto">
    <h1 class="display-4">Fit 4 Life </h1>
    <h3>Success usually comes to those who are too busy to be looking for it.</h3>
</div>
<div id="carouselExampleIndicators" class="carousel slide mt-5" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner img-responsive mt-auto">
        @for (int i = 0; i < Model.Classes.Count(); i++)
        {
            var viewModel = Model.Classes[i];
            <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                <img class="d-block w-100 thumbnail img-responsive" src="@viewModel.PictureUrl" alt="@viewModel.Name Responsive image">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-info" asp-controller="Classes" asp-action="Details" asp-route-id="@viewModel.Id">@viewModel.Name</a></h5>>
                    <p><strong>@viewModel.Description</strong>></p>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
