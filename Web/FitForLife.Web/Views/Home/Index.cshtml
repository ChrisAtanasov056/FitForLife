@model FitForLife.Web.ViewModels.Home.HomeViewModels
@{
    ViewData["Title"] = "Home Page";
}
<div id="carouselExampleIndicators" class="carousel slide h-75" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="/img/thumb-1920-628886.jpg" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>Join NOW !</h5>
                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Maxime, nulla, tempore. Deserunt excepturi quas vero.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/img/thumb-1920-916103.jpg" alt="Second slide">
            <div id="mainCarouselCaption" class="carousel-caption d-none d-md-block">
                <h5>Slider One Item</h5>
                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Maxime, nulla, tempore. Deserunt excepturi quas vero.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/img/geert-pieters-AfgJpWQH4lw-unsplash.jpg" alt="Third slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>Slider One Item</h5>
                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Maxime, nulla, tempore. Deserunt excepturi quas vero.</p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="container">
    <div id="carouselExampleIndicators" class="carousel slide mt-0" data-ride="carousel">
        <div class="carousel-inner img-responsive mt-auto">
            @for (int i = 0; i < Model.Classes.Classes.Count(); i++)
            {
                var viewModel = Model.Classes.Classes[i];
                <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                    <img class="d-block w-100 img-fluid" src="@viewModel.PictureUrl" alt="@viewModel.Name Responsive image">
                    <div class="carousel-caption d-none d-md-block">
                        <h5><a class="btn btn-info" asp-controller="Classes" asp-action="Details" asp-route-id="@viewModel.Id">@viewModel.Name</a></h5>>
                        <p><strong>@viewModel.Description</strong>></p>
                    </div>
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<section id="pricing" class="bg-white">
    <div class="container h-50">
        <h2 class="text-center">PRICING</h2>
        <div class="spacer spacer-line border-primary">&nbsp;</div>
        <div class="spacer">&nbsp;</div>
        <div class="row">
            @foreach (var card in Model.Cards.Cards)
            {
                <div class="col-md-3">
                    <div class="pricing-table">
                        <div class="pricing-table-title">
                            <h5 class="pricing-title bg-info-hover text-white">@card.Name</h5>
                        </div>
                        <div class="pricing-table-price text-center bg-info">
                            <p class="title-font">
                                <span class="pricing-currency text-white">$</span>
                                <span class="pricing-price text-white">@card.Price/</span>
                                <span class="pricing-period text-white">/ @card.Visits Visits.</span>
                            </p>
                        </div>
                        <div class="pricing-table-content">
                            <div class="pricing-table-button">
                                <a href="#x" class="btn btn-info"><span>Request Quote</span></a>
                            </div><!-- / pricing-table-button -->
                        </div><!-- / pricing-table-content -->
                    </div><!-- / pricing-table -->
                </div><!-- / column -->
            }
        </div><!-- / row -->
    </div><!-- / container -->
</section>
